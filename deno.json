{
  "lock": false,
  "name": "Filmpolitiet API",
  "version": "0.3.5",
  "changelog": "https://git.sr.ht/~timharek/filmpolitiet-api/tree/main/item/CHANGELOG.md",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "start": "deno run -A main.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts",
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "pb:init": "deno run -A src/pb/init.ts",
    "pb:serve": "pocketbase serve --dir pb/pb_data",
    "pb:upgrade": "pocketbase update",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": [
      "./src/types/index.d.ts"
    ]
  },
  "lint": {
    "exclude": [
      "pb/",
      "output",
      "_fresh"
    ],
    "rules": {
      "tags": [
        "recommended",
        "fresh"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "pb/",
      "output",
      "_fresh"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "proseWrap": "preserve"
  },
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.4.2/",
    "preact": "https://esm.sh/preact@10.15.1",
    "preact/": "https://esm.sh/preact@10.15.1/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "twind": "https://esm.sh/twind@1.0.7",
    "twind/": "https://esm.sh/twind@1.0.7/",
    "@twind/": "https://esm.sh/@twind/",
    "$std/": "https://deno.land/std@0.192.0/",
    "sqlite": "https://deno.land/x/sqlite@v3.8/mod.ts",
    "zod": "npm:zod@3.22.4",
    "zod-form-data": "npm:zod-form-data@2.0.2"
  }
}
