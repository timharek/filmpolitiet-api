{
  "lock": false,
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "start": "deno run -A main.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts",
    "check": "deno fmt --check && deno lint"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "exclude": [
      "pb_data/",
      "pb_migrations/",
      "output"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "pb_data/",
      "pb_migrations/"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "proseWrap": "preserve"
  }
}
