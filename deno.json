{
  "lock": false,
  "name": "Filmpolitiet API",
  "version": "0.5.4",
  "changelog": "https://git.sr.ht/~timharek/filmpolitiet-api/tree/main/item/CHANGELOG.md",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "start": "deno run -A main.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts",
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "exclude": [
      "output"
    ],
    "rules": {
      "tags": [
        "recommended",
        "fresh"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "output"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "proseWrap": "preserve"
  },
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.6.5/",
    "preact": "https://esm.sh/preact@10.19.2",
    "preact/": "https://esm.sh/preact@10.19.2/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.1",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.0",
    "twind": "https://esm.sh/twind@1.0.7",
    "twind/": "https://esm.sh/twind@1.0.7/",
    "@twind/": "https://esm.sh/@twind/",
    "$std/": "https://deno.land/std@0.215.0/",
    "sqlite": "https://deno.land/x/sqlite@v3.8/mod.ts",
    "zod": "npm:zod@3.22.4",
    "zod-form-data": "npm:zod-form-data@2.0.2",
    "@twind/core": "https://esm.sh/@twind/core@1.1.3",
    "@twind/preset-tailwind": "https://esm.sh/@twind/preset-tailwind@1.1.4/",
    "@twind/preset-autoprefix": "https://esm.sh/@twind/preset-autoprefix@1.0.7/"
  },
  "exclude": [
    "**/_fresh/*"
  ]
}
