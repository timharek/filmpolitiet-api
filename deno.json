{
  "lock": false,
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "start": "deno run -A main.ts",
    "setup:hooks": "deno run -A -r https://deno.land/x/githooks/githooks.ts",
    "check": "deno fmt --check && deno lint",
    "pb:init": "deno run -A src/pb/init.ts",
    "pb:serve": "pocketbase serve --dir pb/pb_data",
    "pb:upgrade": "pocketbase update"
  },
  "githooks": {
    "pre-commit": "check"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "exclude": [
      "pb/",
      "output"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "pb/",
      "output"
    ],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "proseWrap": "preserve"
  },
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.2.0/",
    "preact": "https://esm.sh/preact@10.15.1",
    "preact/": "https://esm.sh/preact@10.15.1/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.1.0",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "twind": "https://esm.sh/twind@1.07",
    "twind/": "https://esm.sh/twind@1.07/",
    "@twind/": "https://esm.sh/@twind/",
    "$std/": "https://deno.land/std@0.190.0/",
    "pb": "npm:pocketbase@0.15.0"
  }
}
